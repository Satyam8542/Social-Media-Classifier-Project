##Python file

from flask import Flask, request, render_template
import string

app = Flask(__name__)

# Define the categories and associated keywords
categories = {
    "informative": ["news", "update", "information", "report", "discovered", "breaking"],
    "promotional": ["sale", "discount", "offer", "buy", "purchase", "deal", "product", "limited"],
    "personal": ["family", "friends", "birthday", "party", "enjoyed", "celebrated", "happy", "sad", "today", "went", "had"]
}

# Function to preprocess the text
def preprocess_text(text):
    # Convert text to lowercase
    text = text.lower()
    # Remove punctuation
    text = text.translate(str.maketrans('', '', string.punctuation))
    # Tokenize the text
    tokens = text.split()
    return tokens

# Function to classify the post based on keywords
def classify_post(post, categories):
    tokens = preprocess_text(post)
    
    category_scores = {category: 0 for category in categories}
    
    for token in tokens:
        for category, keywords in categories.items():
            if token in keywords:
                category_scores[category] += 1
    
    # Determine the category with the highest score
    classified_category = max(category_scores, key=category_scores.get)
    
    return classified_category

@app.route('/', methods=['GET', 'POST'])
def index():
    if request.method == 'POST':
        post = request.form['post']
        category = classify_post(post, categories)
        return render_template('index.html', post=post, category=category)
    return render_template('index.html')

if __name__ == '__main__':
    app.run(debug=True)



##HTML file

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Post Classifier</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>
<body>
    <div class="container">
        <h1>Social Media Post Classifier</h1>
        <form method="POST">
            <textarea name="post" placeholder="Enter your social media post here..."></textarea>
            <button type="submit">Classify Post</button>
        </form>
        {% if post and category %}
            <div class="result">
                <h2>Post:</h2>
                <p>{{ post }}</p>
                <h2>Classified as:</h2>
                <p>{{ category }}</p>
            </div>
        {% endif %}
    </div>
</body>
</html>

